{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#d98383",
    "activityBar.background": "#d98383",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#b6e9b6",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#d98383",
    "statusBar.background": "#cd5c5c",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#d98383",
    "statusBarItem.remoteBackground": "#cd5c5c",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#cd5c5c",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#cd5c5c99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#CD5C5C",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "git.mergeEditor": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "material-icon-theme.folders.associations": {
    "domain": "class", // ícone de classes para o domínio
    "application": "App", // ícone de aplicação
    "usecases": "components", // ícone para casos de uso
    "usecase": "components", // ícone para casos de uso
    "dtos": "flow", // ícone de classes para dtos
    "dto": "flow", // ícone de classes para dtos
    "server": "server", // ícone de servidor
    "entity": "Ngrx-entities", // ícone de classes para entidades
    "entities": "Ngrx-entities", // ícone de classes para entidades
    "repositories": "database", // ícone de banco de dados/repositórios
    "infrastructure": "tools", // infraestrutura com ícone de ferramentas
    "interfaces": "interface", // ícone para interfaces
    "env-config": "Environment" // ícone para configurações de ambiente
  },
  "material-icon-theme.files.associations": {
    "*.domain.ts": "class",
    "*.application.ts": "App",
    // "*.usecase.ts": "components",
    "*.repository.ts": "database",
    "*.interface.ts": "interface",
    "*.entity.ts": "class"
  }
}
